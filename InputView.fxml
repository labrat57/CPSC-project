//Run this as an FXML file linked to the main class of the .java file. 
// the variales ares named : xOne, yOne, xTwo, yTwo, xThree, yThree, xFour, yFour, max
// the names can be changed by just looking for the fx:id and changing what comes after.

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>

//all the widgets are put into a v box as the base
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.RoutePlannerController">
   <children>
      <Label text="Enter your coordinates(0-100):" /> //our code only takes input between 0 and 100
 // we then have 4 identical hboxes containing the prompts to fill with our x and y coordinates
      <HBox prefHeight="48.0" prefWidth="3608.0" spacing="10.0">
         <children>
            <Label text="1st X coordinate" />
            <TextField prefHeight="31.0" prefWidth="61.0" promptText="0.00" fx:id="xOne" />
            <Label text="1st Y coordinate" />
            <TextField fx:id="yOne" promptText="0.00" />
         </children>
      </HBox>
      <HBox layoutX="10.0" layoutY="41.0" prefHeight="49.0" prefWidth="3609.0" spacing="10.0">
         <children>
            <Label text="2nd X coordinate" />
            <TextField prefHeight="31.0" prefWidth="61.0" promptText="0.00" fx:id="xTwo" />
            <Label text="2nd Y coordinate" />
            <TextField fx:id="yTwo" promptText="0.00" />
         </children>
      </HBox>
      <HBox layoutX="10.0" layoutY="41.0" prefHeight="60.0" prefWidth="3610.0" spacing="10.0">
         <children>
            <Label text="3rd X coordinate" />
            <TextField prefHeight="31.0" prefWidth="61.0" promptText="0.00" fx:id="xThree" />
            <Label text="3rd Y coordinate" />
            <TextField fx:id="yThree" promptText="0.00" />
         </children>
      </HBox>
      <HBox layoutX="10.0" layoutY="41.0" prefHeight="55.0" prefWidth="3612.0" spacing="10.0">
         <children>
            <Label text="4th X coordinate" />
            <TextField prefHeight="31.0" prefWidth="61.0" promptText="0.00" fx:id="xFour" />
            <Label text="4th Y coordinate" />
            <TextField fx:id="yFour" promptText="0.00" />
         </children>
      </HBox>
      // final hbox is for the maximum length value.
      <HBox layoutX="10.0" layoutY="188.0" prefHeight="55.0" prefWidth="3612.0" spacing="10.0">
         <children>
            <Label text="Enter your maximum path length" />
            <TextField fx:id="max" prefHeight="31.0" prefWidth="61.0" promptText="0.00" />
         </children>
      </HBox>
  // finally we have a find route button to start the program with the values that have just been input 
      <Button mnemonicParsing="false" onAction="#FindRoute" text="Find route"> // this line is what happens when you click the button. it is calling the method FindRoute from the controller class. 
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin></Button>
   </children>
</VBox>
